{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "..",
    "skipLibCheck": true,
    "typeRoots": ["./types", "../node_modules/@types"],
    "baseUrl": "..",
    "paths": {
      "@types/*": ["app/src/types/*"]
    }
  },
  "include": ["./**/*", "../app/src/types/**/*"],
  "exclude": ["node_modules"]
} 